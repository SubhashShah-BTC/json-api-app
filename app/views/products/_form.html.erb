<%= form_for product do |f| %>
  <table width="100%">
    <tr>
      <td width="33%">
        <table>
          <tr>
            <td>Name:</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>Description:</td>
            <td><%= f.text_field :description %></td>
          </tr>
          <tr>
            <td>Expire Date:</td>
            <td><%= f.text_field :expire_date %>(yyyy-mm-dd)</td>
          </tr>
          <tr>
            <td>Price:</td>
            <td><%= f.text_field :price %></td>
          </tr>
          <tr>
            <td>Collection ID:</td>
            <td><%= f.text_field :collection_id %></td>
          </tr>
          <tr>
            <td>SKU ID:</td>
            <td><%= f.text_field :SKU_ID %></td>
          </tr>
        </table>
      </td>
      <td width="33%">
        <h2>Categories</h2>
        <%= render partial: "categories", locals: { product: @product, categories: @categories } %>
      </td>
      <td width="33%">
        <h2>Tags</h2>
        <%= render partial: "tags", locals: { product: @product, tags: @tags } %>
      </td>
    </tr>
    <h2>Vars</h2>
    <tr>
      <td>
        <h2>Colors</h2>
        <%= render partial: "colors", locals: { product: @product, colors: @colors } %>
      </td>
      <td>
        <h2>Models</h2>
        <%= render partial: "models", locals: { product: @product, models: @models } %>
      </td>
      <td>
        <h2>Images</h2>
        <%= render partial: "images", locals: { product: @product } %>
      </td>
    </tr>
  </table>
  <%= f.submit %>
<% end %>